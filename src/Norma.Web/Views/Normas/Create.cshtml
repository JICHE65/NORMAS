@model Norma.Web.Models.NormaVM

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Creación de normas</a></li>
        </ol>
    </div>

    <font color="blue" face="Book antiqua,arial">
        <h1>CREAR</h1>
    </font>

        <h4>NORMA</h4>
        <hr />
        <div class="container">
            <div class="form-group">
                <div class="col-md-8">
                    <form asp-action="Create" class="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-inline">
                            <label asp-for="Clave    " class="control-label col-md-2"></label>
                            <div class="col-md-6">
                                <input asp-for="Clave" class="required" id="Clave" placeholder="Clave" />
                            </div>
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>

                        <br />

                        <div class="form-inline">
                            <label asp-for="Descripcion" class="control-label col-md-2"></label>
                            <div class="col-md-6">
                                <input asp-for="Descripcion" class="form-control" id="Descripcion" placeholder="Descripción" />
                            </div>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <br />

                        <div class="form-inline">
                            <label asp-for="FechaPublicacion" class="control-label col-md-2"></label>
                            <div class="col-md-6">
                                <input asp-for="FechaPublicacion" class="form-control" />
                            </div>
                            <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
                        </div>


                        <br />

                        <div class="form-inline">
                            <label asp-for="Requisito  " class="control-label col-md-2"></label>
                            <div class="col-md-8">
                                <select asp-for="TipoRequisitoId" class="form-control" asp-items="ViewBag.TipoRequisitoId">
                                    <option value="">-- Selecciona Tipo Requisito --</option>
                                </select>
                            </div>
                            <span asp-validation-for="TipoRequisitoId" class="text-danger" />
                        </div>

                        <br />

                        <div class="form-group form-check">
                            <label class="form-check-label col-md-2"> </label>
                            <div class="col-md-8 col-md-offset-6">
                                <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                            </div>
                        </div>

                        <br />

                        <div class="form-inline">
                            <div class="col-md-8 col-md-offset-10">
                                <input type="submit" value="Crear" class="btn btn-primary" />
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>


        <div class="form-inline">
            <div class="col-md-2 col-md-offset-10">
                <a asp-action="Index">Regresar a la Lista</a>
            </div>
        </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
